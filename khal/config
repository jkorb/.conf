[calendars]

[[uu]]
path                      = $XDG_DATA_HOME/khal/calendars/uu/calendar
color                     = light blue
type                      = calendar

[[private]]
path                      = $XDG_DATA_HOME/khal/calendars/private
color                     = light magenta
type                      = calendar

[[deadlines]]
path                      = $XDG_DATA_HOME/khal/calendars/deadlines
color                     = light red
type                      = calendar

[default]
default_calendar          = uu
default_dayevent_duration = 1h
default_event_duration    = 1d
highlight_event_days      = true
print_new                 = event
show_all_days             = false
timedelta                 = 7d

[highlight_days]
color                     = ''
default_color             = ''
method                    = fg
#multiple                 = dark cyan

[keybindings]
delete                    = "d"


[locale]
dateformat                = %d/%m/%Y
datetimeformat            = %d/%m/%Y %H:%M
default_timezone          = 'Europe/Amsterdam'
firstweekday              = 0
local_timezone            = 'Europe/Amsterdam'
longdateformat            = %d/%m/%Y
longdatetimeformat        = %d/%m/%Y %H:%M
timeformat                = %H:%M
unicode_symbols           = True
weeknumbers               = left

[sqlite]
path                      = $XDG_DATA_HOME/khal/khal.db

[view]
agenda_day_format         = '{bold}{name}, {date-long}{reset}'
agenda_event_format       = '{calendar-color}{cancelled}{start-end-time-style} {title}{repeat-symbol}{alarm-symbol}{reset}'
blank_line_before_day     = false
bold_for_light_color      = true
dynamic_days              = false
event_format              = '{calendar-color}{cancelled}{start}-{end} {title}{repeat-symbol}{alarm-symbol}{description-separator}{description}{reset}'
event_view_always_visible = true
event_view_weighting      = 1
frame                     = top
theme                     = dark
