# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

account         uu
host            localhost
port            1025
tls             off
from            j.korbmacher@uu.nl
user            j.korbmacher@uu.nl
auth            plain
passwordeval    "pass show uu | sed -n '1p'"


account default : uu
